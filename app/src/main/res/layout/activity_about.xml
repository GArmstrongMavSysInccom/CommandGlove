                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1.0.0"
                    android:id="@+id/textView2"
                    android:textStyle="bold|normal"
                    android:textColor="#ff787c80"
                    android:layout_marginLeft="20dp" />
